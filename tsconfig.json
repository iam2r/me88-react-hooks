{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "esnext",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution":"node",
        "allowSyntheticDefaultImports": true,
        "lib":[
            "dom",
            "es6",
            "dom.iterable",
            "scripthost"
        ],
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "root/*": ["./*"],
            "assets/*" : ["./assets/*"]
        }
    }
}